<html>
    <head>
      <title>Survey Signup</title>
	  <meta charset="UTF-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
       <link rel="stylesheet" href="../css/log-in-style.css">
	</head>
<body>		
    <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" ><label for="tab-1" class="tab">	<a href="/signin">Log In</a>  </label>
                <input id="tab-2" type="radio" name="tab" class="sign-up" checked> <label for="tab-2" class="tab">  <a href="/signin/signup">Sign Up</a> </label>
                <div class="login-form">
                <form action="/signin/signup" method="POST">
                <div class="sign-up-htm">
                    <% if(err){ %>
                        <div><p style="color : #D1B385"><%=err.msg +'.'%></p></div>
                    <% } %>
                        <div class="group">
                            <label for="user" class="label">User Name</label>
                            <input id="user" type="text" class="input" name="userName" placeholder="Your name" value="<%=oldInput.name %>" >
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Email </label>
                            <input id="pass" type="text" class="input" name="email" placeholder="example@gmail.com" value="<%=oldInput.email %>">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="pass" type="password" class="input" data-type="password" name="password" placeholder="At least 5 characters" value="<%=oldInput.password %>">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Confirm Password</label>
                            <input id="pass" type="password" class="input" data-type="password" name="confirmPassword" placeholder="Must match password" value="<%=oldInput.confirmPassword %>">
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Sign Up">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label for="tab-1"><a href="/signin">Already Member?</a>
                        </div>
                    </div>
                 </form>
                </div>
            </div>
        </div>
    </body>
 </html>